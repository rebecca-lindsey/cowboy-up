<div id="content">
<div id="horse-header"><i class="fas fa-horse color-horse-<%=@horse.color_selector%>"></i><h1><%=@horse.name%></h1></div>
<ul>
<li>Owner: <%=@horse.user.name%></li>
<li>Sex: <%=@horse.sex%></li>
<li>Color: <%=@horse.color%></li>
<li>Breed: <%=@horse.breed%></li>
</ul>
<%if @horse.user == current_user%>
<div id="button-box">
   <a href="/horses/<%=@horse.slug%>/edit"><button class="small-button">Edit Horse</button></a>

   <form method="POST" action="/horses/<%= @horse.slug %>">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete Horse" class="small-button">
   </form>
   <%end%>
</div>
</div>

